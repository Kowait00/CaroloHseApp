<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wacker.carolohseapp.AppInfoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_info_heading"
        android:id="@+id/AppInfoHeadingTextView"
        android:textAlignment="center"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dev_info_text"
        android:id="@+id/DevInfoTextView"
        android:textAlignment="center"
        android:layout_below="@+id/AppInfoHeadingTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:textSize="20dp"
        android:clickable="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/image_source_info_text"
        android:id="@+id/ImageSourceInfoTextView"
        android:layout_marginTop="77dp"
        android:layout_below="@+id/DevInfoTextView"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
